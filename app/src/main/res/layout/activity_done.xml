<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".DoneActivity">
    <androidx.appcompat.widget.Toolbar
            android:id="@+id/Done_tool_bar"
            android:layout_width="match_parent" android:layout_height="?android:attr/actionBarSize"
            android:background="@color/teal_200" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintTop_toTopOf="parent">
    </androidx.appcompat.widget.Toolbar>

    <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
                  android:orientation="vertical" android:id="@+id/llfinish"
                  android:gravity="center"
                  android:layout_below="@+id/Done_tool_bar">

        <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:text="Congratulations!!!"
                  android:textAllCaps="true"
                  android:textColor="@color/black"
                  android:textStyle="bold"
                  android:layout_gravity="center"
                  android:gravity="center"
                  android:textSize="25dp"/>
        <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:text="you finished today's workout"
                  android:textAllCaps="true"
                  android:textStyle="bold"
                  android:layout_gravity="center"
                  android:gravity="center"
                  android:textSize="20sp"/>
        <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/finsihbtn"
                android:text="finished"
                android:textAllCaps="true"
                android:textSize="25sp"
                android:textStyle="bold"/>
    </LinearLayout>


</RelativeLayout>